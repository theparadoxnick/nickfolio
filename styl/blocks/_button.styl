
//----------------------
// General Button
//----------------------

.button
    background-color: transparent
    border: 1px solid $white
    padding: 10px
    color: $white
    font-size: 3vh
    font-weight: bold
    transition: .5s background ease
         
    &:hover
        background-color: $white
        color: $brand


//----------------------
// Menu Button
//----------------------


.button__menu
    display: flex
    background-color: transparent
    border: none
    padding: 0
    margin: 0
    will-change: background-color
    transition: .5s background-color, color ease
    outline: none
    border: 1px solid $white
    align-items: center

.button__caption
    padding: 0px 30px
    color: $white
    font-family: 'Poppins', sans-serif;
    font-weight: bold
    +only_mobile()
        display: none

.button__burger
    padding: 12px 8px
    border-left: 1px solid $white
    +only_mobile()
        border: 1px solid $white

.button__layer
    border: 2px solid $white
    width: 28px
    margin-bottom: 3px
    margin-left: auto
    transition: 500ms cubic-bezier(0.75, -0.5, 0, 1.75)

    &.-a
        &.-is-active
            transition: 500ms cubic-bezier(0.75, -0.5, 0, 1.75)
            transform: rotate(-45deg) translate(-4px, 5px)
    
    &.-b
        &.-is-active
            opacity: 0

    &.-c
        &.-is-active
            transform: rotate(45deg) translate(-6px, -6px)
            transition: 500ms cubic-bezier(0.75, -0.5, 0, 1.75)

    &:last-of-type
        width: 22px
        margin-bottom: 0

    &.-is-active
        &:last-of-type
            width: 26px

.button__menu:hover
    background-color: $white

    .button__caption
        color: $brand
    
    .button__layer
        border-color: $brand

.button__menu
    &.-is-active
        background-color: transparent
        border: 1px solid $gray

        .button__caption
            color: $gray
        
        .button__burger,        
        .button__layer
            border-color: $gray
            
.button__menu.-is-active:hover
    
    background-color: $gray

    .button__caption
        color: $white
    
    .button__layer
        border-color: $white
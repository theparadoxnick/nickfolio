
.search
  display: none

  &.-is-active
      display: flex
      align-items: center
      background-color: $white
      font-size: 14px
      font-family: 'Poppins', sans-serif

.search__label
    position: relative
    padding: 10px 20px
    color: #777

    &:before
        content: ''
        display: block
        border-left: 1px solid #777
        position: absolute
        top: 50%
        right: 100%
        transform: translate(50%,-50%)
        height: 2em


.search__input
  position: relative
  width: 100%
  background-color: $white
  background-repeat: no-repeat
  padding: 12px 0 12px 40px
  background-position: 6%
  border: none
  box-sizing: border-box
  background-image: url('../img/icone-pesquisa.png')
  outline: none

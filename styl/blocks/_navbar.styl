
.navbar
    display: none
    
    &.-is-active
        display: block
        position: absolute
        padding: 20px
        top: 50%
        right: 0
        transform: translate(0%,-50%)

.navbar__list
    list-style: none
    padding: 0

.navbar__item
    font-size: 4vh
    cursor: pointer
    font-weight: bold
    text-align: left
    margin-bottom: 10px
    padding-bottom: 10px

    &:hover
        position relative
        color: $brand

        &:after
            content: ''
            position: absolute
            border: 4px solid $brand
            bottom: 0;
            left: 50%;
            transform: translate(-50%);
            will-change: animation
            animation: line .5s ease forwards
            @keyframes line 
                from
                    width: 0px
                to
                    width: 100%